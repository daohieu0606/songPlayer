<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--        play music-->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSongThumbnail2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="7dp"
            android:src="@drawable/ic_music"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:id="@+id/txtSongName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:maxLines="1"
                android:id="@+id/txtArtist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:layout_marginStart="20dp"
            android:id="@+id/btnPreSong"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_skip_previous_24"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <ImageButton
            android:id="@+id/btnNextSong"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_skip_next_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>
    <!--        end play music-->
    <!--        image app-->
    <!--        end image app-->
    <!--        song name-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <ToggleButton
            android:id="@+id/btnMarkFavorite"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end|top"
            android:textOn=""
            android:textOff=""
            android:tag="@string/not_love"
            android:layout_height="25dp"
            android:background="@drawable/selector_favorite"
            android:layout_width="25dp" />
        <ImageView
            android:id="@+id/imgCenterSongThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="100dp"
            android:src="@drawable/ic_music" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:id="@+id/txtSongTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <!--        end song name-->
    <!--        music time line-->
    <LinearLayout
        android:id="@+id/timeControlContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/txtCurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <SeekBar
            android:thumbTint="#E91E63"
            android:progressTint="#E91E63"
            android:progress="50"
            android:id="@+id/sbSongProcess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contextClickable="false"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />
    </LinearLayout>
    <!--        end music time line-->
    <!--        controller section-->

    <!--NEED VOLUME SETTERRRRRRRRRRR-->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/btnRepeat"
                android:background="@drawable/ic_repeat_never"
                android:scaleType="centerInside"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/btnBackward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:scaleType="centerInside"
            android:src="@drawable/backwardic" />

        <ToggleButton
            android:height="25dp"
            android:width="25dp"
            android:textOff=""
            android:textOn=""
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:tag="@string/pause_ic"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_pause_resume"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:scaleType="centerInside"
            android:src="@drawable/forwardic" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ToggleButton
                android:textOn=""
                android:textOff=""
                android:id="@+id/btnShuffle"
                android:background="@drawable/selector_shuffle"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"/>
        </LinearLayout>


    </LinearLayout>
    <!--        end controller section-->
</LinearLayout><!--    end main-->